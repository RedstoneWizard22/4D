/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  * {
    -webkit-tap-highlight-color: transparent;
  }

  html,
  body,
  body > div:first-child {
    height: 100%;
    margin: 0;
  }

  body {
    @apply bg-gray-50 font-sans text-gray-600;
  }

  a {
    @apply text-blue-500 underline;
  }

  a:visited {
    @apply text-purple-600;
  }
}
